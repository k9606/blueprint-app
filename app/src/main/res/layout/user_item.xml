<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              xmlns:app="http://schemas.android.com/apk/res-auto"              android:id="@+id/linearlayoutid"              android:layout_width="match_parent"              android:layout_height="match_parent"              android:layout_gravity="center"              android:onClick="onClick"              android:orientation="horizontal"              android:paddingTop="10dp"    >    <LinearLayout        android:layout_width="200dp"        android:layout_height="wrap_content"        android:background="@color/darkgray"        android:orientation="vertical"        android:paddingLeft="15dp">        <Button            android:id="@+id/User"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/darkgray"            android:gravity="left|center"            android:padding="10dp"            android:textSize="15dp"            android:text="正在开垦中"            android:textColor="@color/white"            />        <Button            android:id="@+id/Classified"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/darkgray"            android:gravity="left|center"            android:padding="10dp"            android:textSize="15dp"            android:text="正在开垦中"            android:textColor="@color/white"            />        <Button            android:id="@+id/Version"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/darkgray"            android:gravity="left|center"            android:padding="10dp"            android:textSize="15dp"            android:text="正在开垦中"            android:textColor="@color/white"            />        <Button            android:id="@+id/Order"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/darkgray"            android:gravity="left|center"            android:padding="10dp"            android:textSize="15dp"            android:text="分类打印"            android:textColor="@color/white"            />        <Button            android:id="@+id/exit"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/darkgray"            android:gravity="left|center"            android:padding="10dp"            android:textSize="15dp"            android:text="退出"            android:textColor="@color/white"            />    </LinearLayout></LinearLayout>